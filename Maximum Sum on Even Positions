#include <bits/stdc++.h>
using namespace   std;
#define boost     ios_base::sync_with_stdio(false); cin.tie(NULL); cout.tie(NULL)
#define ll        long long 
#define ld        long double
#define mkp       make_pair
#define pb     	  push_back	
#define pf     	  push_front
#define ff	  	  first
#define ss	  	  second
#define pii       pair<int,int>
#define pob       pop_back
#define pof       pop_front
#define mxy 	  map<pair<ll, ll>, ll>  
#define q1        1000000007
#define bin1      __builtin_popcount 
#define map2d	  map<long long,map<long long , long long > >
#define um		  unordered_map<ll,ll>
#define INF       0x3f3f3f3f
#define all(x)    (x).begin(), (x).end()
#define f()
int main()
{
	
	ll t;                  
	cin>>t;
	while(t--)
	{	
		ll n;
		cin>>n;
		int fl=0;
			vector<int>arr(n);
			ll sum=0,er=0,odr=0;
			for(int i=0;i<n;i++)
			{
				cin>>arr[i];
				if(i%2==0)
					sum+=arr[i];
			}
			ll add=0;
			for(int i=0;i<n;i+=2)
			{
				if(i+1<n)
				{
					er+=(arr[i+1]-arr[i]);
					if(er<0)
						er=0;
					add=max(add,er);
					//cout<<er<<" "<<i<<endl;
				}
			}
			for(int i=1;i<n;i+=2)
			{
				if(i+1<n)
				{
				odr+=(arr[i]-arr[i+1]);
				if(odr<0)
					odr=0;
					add=max(odr,add);
					//cout<<odr<<" "<<i<<endl;
				}
			}
			cout<<sum+add<<endl;
			
		
	}

return 0; 
}

